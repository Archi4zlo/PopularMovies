<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/movieListFragment">

    <fragment
        android:id="@+id/movieListFragment"
        android:name="com.archi4zlo.retrofitsimple.movieList.MovieListFragment"
        android:label="fragment_movie_list"
        tools:layout="@layout/fragment_movie_list" >
        <action
            android:id="@+id/action_movieListFragment_to_detailsMovieFragment"
            app:destination="@id/detailsMovieFragment" />
    </fragment>

    <fragment
        android:id="@+id/detailsMovieFragment"
        android:name="com.archi4zlo.retrofitsimple.detailsMovie.DetailsMovieFragment"
        android:label="fragment_details_movie"
        tools:layout="@layout/fragment_details_movie">

        <argument android:name="selectedMovie"
            app:argType="com.archi4zlo.retrofitsimple.data.remote.movie.Movie"/>
    </fragment>
</navigation>